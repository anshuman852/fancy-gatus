  "template": "#{{CHANGELOG}}",
  "pr_template": "* #{{TITLE}} by @#{{AUTHOR}} in ##{{NUMBER}}",
  "empty_template": "No changes",
  "transformers": [
    {
      "pattern": "^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|deps)(\\(.+\\))?:\\s*(.+)",
      "target": "$3"
    }
